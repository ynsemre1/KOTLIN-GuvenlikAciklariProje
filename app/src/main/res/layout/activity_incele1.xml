<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".incelemeler.incele1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <!-- Kötü Tasarlanmış Kimlik Doğrulama ve Yetkilendirme Açıklama -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kötü Tasarlanmış Kimlik Doğrulama ve Yetkilendirme:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Açık: Zayıf parolalar, oturum açma bilgilerinin güvensiz depolanması -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Açık: Zayıf parolalar, oturum açma bilgilerinin güvensiz depolanması."
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Önlemler: Güçlü parola politikaları, çift faktörlü kimlik doğrulama, güvenli oturum yönetimi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Önlemler: Güçlü parola politikaları, çift faktörlü kimlik doğrulama, güvenli oturum yönetimi."
            android:textSize="16sp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/devam1Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Devam Et" />

        <Button
            android:id="@+id/anaSayfaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="AnaSayfa" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
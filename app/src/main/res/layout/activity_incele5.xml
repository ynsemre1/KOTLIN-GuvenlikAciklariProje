<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".incelemeler.incele5">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <!-- Güvenlik Güncelleştirmelerinin İhmal Edilmesi Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Güvenlik Güncelleştirmelerinin İhmal Edilmesi:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Açık: Yazılım güncellemelerinin düzenli olarak yapılmaması -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Açık: Yazılım güncellemelerinin düzenli olarak yapılmaması."
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Önlemler: Güvenlik güncelleştirmelerini takip etme, düzenli olarak güncelleme politikaları -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Önlemler: Güvenlik güncelleştirmelerini takip etme, düzenli olarak güncelleme politikaları."
            android:textSize="16sp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/devam2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Devam Et" />

        <Button
            android:id="@+id/anaSayfaButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="AnaSayfa" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
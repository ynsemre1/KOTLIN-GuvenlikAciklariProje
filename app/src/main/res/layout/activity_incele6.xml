<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".incelemeler.incele6">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <!-- Uygulama İzolasyonunun Eksikliği Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uygulama İzolasyonunun Eksikliği:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Açık: Uygulamalar arasında yetersiz izolasyon, bir uygulamanın diğerlerine zarar verebilmesi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Açık: Uygulamalar arasında yetersiz izolasyon, bir uygulamanın diğerlerine zarar verebilmesi."
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Önlemler: Sandboxing tekniklerini kullanma, uygulama izolasyonunu artırma -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Önlemler: Sandboxing tekniklerini kullanma, uygulama izolasyonunu artırma."
            android:textSize="16sp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/devam2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Devam Et" />

        <Button
            android:id="@+id/anaSayfaButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="AnaSayfa" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>